    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/lib/IModelChangesetCLUtililty.js",
            "args": [
                "--email=Regular.IModelJsTestUser@mailinator.com", "--password=Regular@iMJs", "--projectName=NodeJsTestProject",
                "--iModelName=ChangesetUtility", "--imsEnv=QA", "--hubEnv=QA", "--numChangesets=5",
                "--numCreatedPerChangeset=25", "--changesetPushDelay=500"
            ],
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha All",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/src/**/*test.ts",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector"
        },
    ]
}